<%- layout("/layouts/boilerplate") %>
<body>
  <link rel="stylesheet" href="/public/css/rating.css">
  <link href="https://api.mapbox.com/mapbox-gl-js/v3.7.0/mapbox-gl.css" rel="stylesheet">
<script src="https://api.mapbox.com/mapbox-gl-js/v3.7.0/mapbox-gl.js"></script>
    <div class="row">
        <div class="col-8 offset-2 mt-3">

   
    <div class="card mb-3 col-10 offset-1 show-card listing-card">
           
    <h3><%= list.title %></h3>
        <img src="<%= list.image.url %>" class="card-img-top show-img" alt="...">
        <div class="card-body">
          <% console.log(list.owner +"owner") %>
          <p class="card-text">Owned by <%=list.owner.username || 'Unknown Owner' %></p>

          <p class="card-text">
            <%= list.description %> <br></p>
             <p class="card-text">&#8377;<%= list.price %></p> <br>
            <p class="card-text"> <%=list.location %> <br></p>
            <p class="card-text"><%= list.country %></p><br></p>
          <p class="card-text"><small class="text-body-secondary">Last updated 3 mins ago</small></p>
        </div>
      </div>
      
   <div class="btns">
    <a href="/listings/<%= list.id %>/edit" class="btn btn-dark col-1 offset-1 edit-btn"> Edit </a>
    <form action="/listings/<%= list.id %>?_method=DELETE" method="post" >
        <button type="submit" class="btn btn-dark offset-4">Delete</button>
    </form>
   </div>
   <div class="col-10 offset-1 mt-3 mb-3">
    <hr>
    <% if(currUser){ %>
    <h3>Leave a comment</h3>
    <form action="/listings/<%= list.id %>/reviews" method="post" novalidate class="needs-validation">
      
        <!-- <label for="rating" class="form-label">Range</label>
        <input type="range" class="form-range" min="0" max="5" name="review[rating]"  id="rating" required>
        <div class="invalid-feedback">
          Range should be given
      </div> -->
      <div class="mt-3 mb-3">
        <label for="rating" class="form-label">Range</label>
      <fieldset class="starability-slot">
        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
        <label for="first-rate1" title="Terrible">1 star</label>
        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
        <label for="first-rate2" title="Not good">2 stars</label>
        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
        <label for="first-rate3" title="Average">3 stars</label>
        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
        <label for="first-rate4" title="Very good">4 stars</label>
        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
        <label for="first-rate5" title="Amazing">5 stars</label>
      </fieldset>
      </div>

      <div class="mt-3 mb-3">
        <label for="comment" class="form-label" > comment</label>
        <textarea name="review[comment]" id="comment" class="form-control" col="30" row="6" required></textarea>
        <div class="invalid-feedback">
          comment should be entered
      </div>
      </div>
      <div class="mt-3 mb-3">
        <button type="submit" class="btn btn-outline-dark">submit</button>
      </div>
    </form>
    <hr>
    <% } %>
    <% if(list.review) %>
   <div class="row">
    <h4>All reviews</h4>
    <% for (review of list.reviews) {%>
      <div class="card col-5 mb-3 ms-2 pb-2 pt-1">
        <div class="card-body">
          <h5 class="card-title">@<%= review.author.username  %></h5>
          
          <p class="starability-result card-text" data-rating=<%= review.rating %> >
          </p>
          <p class="card-text"><%= review.comment %></p>
              <%if(currUser && review.author._id.equals(currUser._id)){%>
              <form action="/listings/<%= list._id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
                  <button class="btn btn-sm btn-dark">Delete</button>
              </form>
              <% } %>
        </div>
      </div>
    <% } %>
   </div>
   </div>

</div>
<div class="col-8 offset-2 mt-3 mb-3">
  <h3>Where you'll be</h3>
  <div id="map"></div>
</div>
</div>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            'use strict';
        
            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.querySelectorAll('.needs-validation');
        
            // Loop over them and prevent submission
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
        
                        form.classList.add('was-validated');
                    }, false);
                });
        });
        </script>
